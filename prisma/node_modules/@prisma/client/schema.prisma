// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid())
  email                String    @unique
  password             String
  name                 String?
  image                String?
  resetPasswordCode    String? // Код для сброса пароля
  resetPasswordExpires DateTime? // Срок действия кода
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}
